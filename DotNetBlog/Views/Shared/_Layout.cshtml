<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="@ViewBag.Description"/>
    <meta name="keywords" content="@ViewBag.Keywords"/>
    <title>@ViewBag.Title - DotNetBlog</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar">
        <div>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category=".Net">.NET</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="ML">ML</a>
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Panel" asp-action="Index">Admin Panel</a>
                }
                <a asp-controller="Auth" asp-action="LogOut">LogOut</a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="LogIn">LogIn</a>
            }
        </div>
    </nav>
</header>
<div>
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer>
    <div>
        &copy; 2022 - DotNetBlog - <a asp-area="" asp-controller="About" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>