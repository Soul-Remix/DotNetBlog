@model IEnumerable<Post> 

@{
    ViewData["Title"] = "Admin panel";
}

<h2>Admin panel</h2>

<a asp-controller="Panel" asp-action="Edit">Add a new post</a>

<div class="text-center">
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">@post.Title</a>
                -
                <a asp-controller="Panel" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
                -
                <a asp-controller="Panel" asp-action="ConfirmDelete" asp-route-id="@post.Id">Delete</a>
            </li>
        }
    </ul>
</div>