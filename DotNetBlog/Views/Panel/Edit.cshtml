@model PostViewModel

@{
}

@if (Model.Id == 0)
{
    <h2>Create Post</h2>
}
else
{
    <h2>Edit - @Model.Title</h2>
}

<link rel="stylesheet" href="~/js/Trumbowyg/dist/ui/trumbowyg.min.css">
<form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div>
        <label>Title</label>
        <input asp-for="Title"/>
    </div>
    <div>
        <label>Description</label>
        <input asp-for="Description"/>
    </div>
    <div>
        <label>Tags</label>
        <input asp-for="Tags"/>
    </div>
    <div>
        <label>Category</label>
        <select asp-for="Category">
            <option value=".Net">.Net</option>
            <option value="ML">ML</option>
            <option value="Tips">Tips</option>
        </select>
    </div>
    <div>
        <label>Body</label>
        <textarea id="editor" asp-for="Body"></textarea>
    </div>
    <div>
        <label>Image</label>
        <input asp-for="Image"/>
        <input asp-for="CurrentImage" type="hidden"/>
    </div>
    <button type="submit">Submit</button>
</form>

@section Scripts
{
    <script src="~/js/jquery_3.3.1.js"></script>
    <script src="~/js/Trumbowyg/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}