@model PostViewModel

@{
}

@if (Model.Id == 0)
{
    <h2>Create Post</h2>
}
else
{
    <h2>Edit - @Model.Title</h2>
}


<form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div>
        <label>Title</label>
        <input asp-for="Title"/>
    </div>
    <div>
        <label>Body</label>
        <input asp-for="Body"/>
    </div>
    <div>
        <label>Image</label>
        <input asp-for="Image"/>
    </div>
    <button type="submit">Submit</button>
</form>